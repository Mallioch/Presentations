@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <style>
        .to-do-app {
            border: solid 1px #CCC;
            margin: 0 auto;
            width: 400px;
        }

        .to-do-header {
            text-align: right;
            padding: 5px;
        }

        .to-do-input input {
            margin: 15px auto;
            display: block;
            width: 80%;
        }

        .to-do-list {
            margin: 0;
            padding: 0;
        }

        .to-do-item {
            list-style-type: none;
            padding: 5px;
        }

        .to-do-item:nth-child(odd) {
            background-color: #CCC;
        }
    </style>

    <div id="app"></div>

    <script type="text/javascript" src="~/Content/reactapp.js"></script>
</body>
</html>
